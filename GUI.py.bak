


from tkinter import *

class Application(Frame):
    def __init__(self, master=None):
        Frame.__init__(self, master)
        # Set Up Master (Main Window)
        self.master.title('Durak Real-Time Assistant')
        width = 300
        height = int(width*(16/9))
        self.master.minsize(width=width,height=height)
        self.master.resizable(width=False, height=False)
        
        # Set Up Grid
        self.grid()
        for r in range(15): # of rows
            self.master.rowconfigure(r, weight=1)
            #self.master.grid_rowconfigure(r, weight=1, uniform="x")
            #self.master.grid_rowconfigure(r)#, weight=1)
        for c in range(9): # of columns
            self.master.columnconfigure(c, weight=1)
            #self.master.grid_rowconfigure(c, weight=1, uniform='z')
            #Button(master, text='Button {0}'.format(c)).grid(row=6,column=c,sticky=E+W)

        # Add Frames
        Trump = Frame(master, bg='red')
        Trump.grid(row=0, column=0, rowspan=1, columnspan=9, sticky=W+E+N+S)
        Label(Trump, text='trump suit').pack()
        
        Button(master, text='X').grid(row=1, column=0, rowspan=3, columnspan=1, sticky=W+E+N+S)

        Community = Frame(master, bg='blue')
        Community.grid(row=1, column=1, rowspan=3, columnspan=7, sticky=W+E+N+S)
        Label(Community, text='community cards').pack()

        Button(master, text='+').grid(row=1, column=8, rowspan=3, columnspan=1, sticky=W+E+N+S)

        Button(master, text='X').grid(row=4, column=0, rowspan=3, columnspan=1, sticky=W+E+N+S)
        
        Hand = Frame(master, bg='green')
        Hand.grid(row=4, column=1, rowspan=3, columnspan=7, sticky=W+E+N+S)
        Label(Hand, text='hand cards').pack()
        
        Button(master, text='+').grid(row=4, column=8, rowspan=3, columnspan=1, sticky=W+E+N+S)

        Advice = Frame(master, bg='orange')
        Advice.grid(row=7, column=0, rowspan=5, columnspan=9, sticky=W+E+N+S)
        Label(Advice, text='best possible plays').pack()

        Button(master, text='Defend').grid(row=12, column=0, rowspan=3, columnspan=3, sticky=W+E+N+S)
        
        Button(master, text='Attack').grid(row=12, column=3, rowspan=3, columnspan=3, sticky=W+E+N+S)

        Button(master, text='Fight').grid(row=12, column=6, rowspan=3, columnspan=3, sticky=W+E+N+S)



if __name__ == '__main__':        
    root = Tk()
    app = Application(master=root)
    app.mainloop()
    
                
